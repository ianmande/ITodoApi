{
  "compilerOptions": {
    "target": "ES2020",                 
    "module": "CommonJS",               
    "outDir": "./dist",                
    "rootDir": ".",                   
    "strict": true,                     
    "esModuleInterop": true,
    "baseUrl": ".",                  
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],         
      "@utils/*": ["src/utils/*"],           
      "@data/*": ["src/data/*"],           
      "@routes/*": ["src/routes/*"]           
    }
  },
  "include": ["src", "main.ts"],     
  "exclude": ["node_modules", "dist"] 
}